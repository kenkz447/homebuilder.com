{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "shared/*": ["src/scripts/shared/*"],
            "app/*": ["src/scripts/app/*"],
            "admin/*": ["src/scripts/admin/*"]
        },
        "allowJs": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2017",
            "esnext.asynciterable"
        ],
        "moduleResolution": "node",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "target": "es2016",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}